<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:barrierDirection="start"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="additional_mail_edit"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_after_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="additional_title"
        app:barrierMargin="15dp"
        />

    <TextView
        android:id="@+id/additional_title"
        android:text="@string/additional_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/additional_mail"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/additional_email_title"
        app:layout_constraintEnd_toEndOf="@+id/barrier_start"
        app:layout_constraintTop_toBottomOf="@+id/barrier_after_title"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/additional_mail_edit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toEndOf="@+id/additional_mail"
        app:layout_constraintTop_toBottomOf="@+id/barrier_after_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>